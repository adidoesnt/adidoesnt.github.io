{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "jsx": "react-jsx",
        "types": ["bun-types"],
        "baseUrl": "src",
        "paths": {
            "@components/*": ["components/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@api/*": ["pages/api/*"],
            "@assets/*": ["assets/*"],
            "@assets": ["assets/index.ts"],
            "@styles/*": ["styles/*"],
            "@constants/*": ["constants/*"],
            "@content/*": ["content/*"],
            "@utils/*": ["utils/*"]
        },
        "jsxImportSource": "react"
    }
}
